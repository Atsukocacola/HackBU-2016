<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:background="@drawable/background"
                tools:context="com.jeffreychan.yutnori.MainActivity">

    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:id="@+id/sealmoveimageview"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="170dp"
        android:id="@+id/penguinjumpimageview"
        android:layout_gravity="center_vertical"
        android:layout_above="@+id/startButton"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="190dp"
        android:layout_height="80dp"
        android:id="@+id/startButton"
        android:background="@drawable/startbutton1"
        android:layout_below="@+id/sealmoveimageview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:gravity="center_horizontal"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/title"
        android:layout_marginTop="34dp"
        android:text="Yut Nori!"
        android:focusableInTouchMode="true"
        android:textColor="#18536D"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="50sp"
        android:gravity="center_horizontal"/>


</RelativeLayout>
